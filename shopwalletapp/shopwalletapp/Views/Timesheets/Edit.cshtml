@model shopwalletapp.Models.Timesheet

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
 


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

